<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test">
    <select id="selectAllRecommendHotspot" resultType="com.jsoftware.platform.model.RecommendHotspot">
        SELECT id
             , title
             , img_url
             , contents
        FROM recommend_hotspot
    </select>

    <select id="selectRecommendHotspotById" resultType="com.jsoftware.platform.model.RecommendHotspot">
        SELECT id
        , title
        , img_url
        , contents
        FROM recommend_hotspot
        WHERE id = #{id}
    </select>

    <insert id="insertRecommendHotspot" parameterType="com.jsoftware.platform.model.RecommendHotspot">
        INSERT INTO recommend_hotspot (title, img_url, contents)
        VALUES (#{title}, #{img_url}, #{contents})
    </insert>
</mapper>